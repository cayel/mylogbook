
<div class="panel panel-default">
    <!-- Default panel contents -->
    <canvas id="TheChartMovies"></canvas>
</div>

<script>
    var ctxMovies = document.getElementById("TheChartMovies");
    var TheChartMovies = new Chart(ctxMovies, {
        type: 'bar',
        data: {
            labels: @Html.Raw(ViewBag.YearListMovies),
            datasets: [{
                label: '# films vus',
                data:  @Html.Raw(ViewBag.CountListMovies),
                backgroundColor: 'rgba(42, 161, 152, 0.2)',
                borderColor: 'rgba(54, 162, 235, 0.2)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
</script>




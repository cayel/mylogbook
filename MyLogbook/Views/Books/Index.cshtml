@model PagedList.IPagedList<MyLogbook.Models.Book>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Mes lectures";
}

<h2>Mes lectures</h2>

<p>
    @Html.ActionLink("Nouveau", "Create")
    @using (Html.BeginForm())
    {
    <p>
        <div class="form-inline">
            @Html.TextBox("SearchBook", null, htmlAttributes: new { @class = "form-control" })
            <input type="submit" value="Filtrer" class="btn btn-default" />
        </div>
    </p>
    }
    </p>

    <table class="table">
        <tr>
            <th>
                Titre
            </th>
            <th>
                Auteur
            </th>
            <th>
                Date
            </th>
            <th>
                Note
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Writer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id=item.Id })
                </td>
            </tr>
    }

    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter}))

